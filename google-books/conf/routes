# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# --- Home Page (Example) ---
GET     /                           controllers.HomeController.index()

GET   /health   controllers.HealthController.health


# --- Authentication ---
# Handles the Google OAuth 2.0 code exchange
POST    /api/auth/google/exchange   controllers.AuthController.exchangeCode()

# --- Public Google Books API ---
# Handles public book searches
GET     /api/books/search           controllers.GoogleBooksController.getGoogleBook(search: String, term: String)

# --- Protected Google Books User Library API ---
# Fetches the user's bookshelves (Requires valid Bearer token validated by Kong)
GET     /api/my-library/bookshelves controllers.MyLibraryController.getBookshelves()
# Add more routes here if needed, e.g., for specific shelves:
# GET /api/my-library/bookshelves/:shelfId/volumes controllers.MyLibraryController.getVolumesOnShelf(shelfId: String)


# --- Static Assets ---
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)